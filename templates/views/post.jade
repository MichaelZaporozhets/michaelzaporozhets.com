extends ../layouts/default

block content
	header
		.global-container
			.intro
				h1= data.post.title
				hr
				p Posted 
					if data.post.publishedDate
						| on #{data.post._.publishedDate.format('MMMM Do, YYYY')} 
					if data.post.categories && data.post.categories.length
						| in 
						each cat, cat_i in data.post.categories
							a(href='/blog/' + cat.key)= cat.name
							if cat_i < data.post.categories.length - 1
								| , 
							else
								|  
					if data.post.author
						| by #{data.post.author.name.first}
	.global-container
		.page(data-name="portfolio")
			.content
				.portolfioItem.animBlock
					if !data.post
						h2 Invalid Post.
					else
						.postBody
							.purpose
								h3 Purpose
							.involvement
								h3 Involvement
							.tech
								h3 Technologies
								ul
									each tech in data.post.content.technologies
										li #{tech.name}
							.images
								h3 Gallery
								ul
									each image in data.post.images
										li: img(src="#{image.url}")

										