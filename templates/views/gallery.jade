extends ../layouts/default

block intro
	.container
		h1 Portfolio
	
block content
	.container
		if portfolios.length
			each Portfolio in portfolios
				h2= Portfolio.name
					if Portfolio.publishedDate
						.pull-right.text-muted= Portfolio._.publishedDate.format('Do MMM YYYY')
				
				.row.Portfolio-images
					if Portfolio.heroImage.exists
						.col-sm-4.col-md-4.Portfolio-image: img(src=Portfolio._.heroImage.limit(680,680)).img-rounded
						.col-sm-8.col-md-8: .row
							each image in Portfolio.images
								.col-xs-4.col-sm-4.col-md-3.Portfolio-image: img(src=image.limit(300,300)).img-rounded
					else
						each image in Portfolio.images
							.col-xs-6.col-sm-4.col-md-3.Portfolio-image: img(src=image.limit(300,300)).img-rounded
		else
			h3.text-muted There are no image portfolios yet.
