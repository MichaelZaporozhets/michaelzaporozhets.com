extends ../layouts/default

block content
	header
		.global-container
			.intro
				h1 Michael Zaporozhets
				hr
				h3 
					span.creative Creative
					span.divider
					span.digital Experience
					span.divider
					span.obsession Technologist

	mixin page(name)
		.global-container
			if enquirySubmitted & name == 'contact'
				.page(data-name="#{name}").cur
					if block
						block
			else if !enquirySubmitted & name == 'home'
				.page(data-name="#{name}").cur
					if block
						block
			else 
				.page(data-name="#{name}")
					if block
						block

	+page("home")
		.content
			//- .opening.animBlock
			//- 	p I've been designing and building products and experiences for over a decade. 
			//- 
			//- 	p From band pages on myspace to architecting UI/Experience for the worlds' foremost industrial IoT platform (now GE Predix Studio), I've seen the web change and grow from a creator's community to an experience economy (oh the irony), but some things never change:
			//- 
			//- 	p I still listen to the same bands I modelled myspace pages from and I'm still passionately in love with the unbridled and often uncharted waters that technology holds for all of us.
			//- .page-break
			.about.animBlock
				h4 About
				.whatAmI
					p I am a tools-agnostic creator with over a decade of experience in designing and developing products, platforms and experiences in the digital space. 

				.specialise
					h5 I specialise in
					ul
						li Design (UI/UX)
						li Development
						li Protyping/Ideation
						li Product Management
						li Commercial Management
				.otherexperience
					h5 I am also experienced in:
					ul
						li Business Development/Tendering Process
						li Digital Team Leadership
						li Procurement
				.extracurricular
					h5 Extracurricular ( #[span.past Past] / #[span.present Present] )
					ul
						li.present Guitar
						li.present Woodworking
						li.past Classical Ballet (8 years)
						li.past Choir (8 years)
						li.past Double Bass (8 years)
						
			.page-break
			.experience.animBlock
				h4 Experience
				.positions
					mixin position(position)
						.position
							.col.when
								.timeSpent
									if !position.current
										| #{position._.startDate.format('M/Y')} - #{position._.endDate.format('M/Y')}
									else
										| #{position._.startDate.format('M/Y')} - present
							.col.what
								span.role= position.role
								span.company= position.company
								p.description= position.description

					each position in positions
						+position(position)
			.page-break
			.recommendations.animBlock
				h4 Recommendations
				.recs
					mixin recommendation(rec)
						.rec
							span.name= rec.name.first + ' ' + rec.name.last
							span.role= rec.role
							p.said “#{rec.said}”
							.when #{rec._.when.format('D/M/Y')}, #{rec.name.first} managed Michael at #{rec.company}

					each rec in recommendations
						+recommendation(rec)


	+page("portfolio")
		.content
			.opening.animBlock
				h4 Portfolio
				.portfolio
					.content
						if data.categories.length
							ul
								each cat in data.categories
									li: a(href='/portfolio/' + cat.key, class=data.category && data.category.id == cat.id ? 'active' : false).list-group-item= cat.name

						mixin post(post)
							.post(data-ks-editable=editable(user, { list: 'Post', id: post.id }))
								h3: a(href='/portfolio/' + post.slug)= post.title
								p!= post.content.brief.html
								if post.content.extended
									p.read-more: a(href='/portfolio/' + post.slug) Read more...

						if filters.category && !data.category
							h3.text-muted Invalid Category.
						else
							if data.posts.results.length
								each post in data.posts.results
									+post(post)
							else
								if data.category
									h5.text-muted There are no posts in the category #{data.category.name}.
								else
									h5.text-muted I'm yet to add anything here.



	+page("contact")
		.content
			.contactOpening.animBlock
				h4 Contact
				
				span.por Call me #[a(href="#") 0401015708]
				span.por Email me #[a(href="#") michaelzaporozhets@gmail.com]
				p.or Or, fill out the following form and I will get back to you post haste.

				+flash-messages(messages)
			.contactForm.animBlock
				if enquirySubmitted
					h5 Thanks for getting in touch.
				else
					form(method='post')
						input(type='hidden', name='action', value='contact')
						.dual
							.form-group(class=validationErrors.name ? 'has-error' : null)
								input(type='text', name='name.full', placeholder='Name', value=formData['name.full']).form-control
							.form-group(class=validationErrors.email ? 'has-error' : null)
								input(type='email', name='email', placeholder="Email", value=formData.email).form-control
						.form-group(class=validationErrors.enquiryType ? 'has-error' : null)
							each type in enquiryTypes
								.radio
									input(type="radio", selected=formData.enquiryType == type.value)
									label= type.label
						.form-group(class=validationErrors.message ? 'has-error' : null)
							textarea(name='message', placeholder='Leave us a message...' rows=4).form-control= formData.message
						.form-actions
							button(type='submit').btn.btn-primary Send

	+page("pagenotfound")
		.content
			.opening.animBlock
				h4 404
				p Looks like you're lost! #[a(href="/home") Go Back Home?]
