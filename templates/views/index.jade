extends ../layouts/default

block content
	mixin page(name)
		if enquirySubmitted & name == 'contact'
			.page(data-name="#{name}").cur
				if block
					block
		else if !enquirySubmitted & name == 'home'
			.page(data-name="#{name}").cur
				if block
					block
		else 
			.page(data-name="#{name}")
				if block
					block

	+page("home")

	+page("cv")
		.content
			.opening.animBlock
				p Of the approximate 7.427 billion people on this planet, not many know exactly what they want to achieve of themselves, what their heart most truly yearns for or what gives their relatively meaningless lives any kind of rational purpose or reason to exist. 
				
				p I’ve always been different.

			.about.animBlock
				h4 About
				.whatAmI
					p I’m a cocktail drinking, grammar nazi, creative professional with a ‘mad scientist’ programming alter-ego.
					p Creative Technologist for short.

				.specialise
					h5 I specialise in
					ul
						li Design (UI/UX)
						li Development
						li Protyping/Ideation
						li Copywriting
						li Creative Direction
				.otherexperience
					h5 I am also experienced in:
					ul
						li Video Prodution and Editing
						li Music Production
						li Digital Marketing
				.extracurricular
					h5 Extracurricular ( #[span.past Past] / #[span.present Present] )
					ul
						li.present Writing
						li.present Guitar (5 years)
						li.past Classical Ballet (8 years)
						li.past Choirboy at St Mary’s Cathedral Choir (8 years)
						li.past Double Bass (8 years)
						li.past Ukrainian Dancing (13 years)

			.experience.animBlock
				h4 Experience
				.positions
					mixin position(position)
						.position
							.col.when
								.timeSpent
									if !position.current
										| #{position.startDate} - #{position.endDate}
									else
										| #{position.startDate} - present
							.col.what
								span.role= position.role
								span.company= position.company
								p.description= position.description

					each position in positions
						+position(position)

			.recommendations.animBlock
				h4 Recommendations
				.recs
					mixin recommendation(rec)
						.rec
							span.name= rec.name
							span.role= rec.role
							p.said “#{rec.said}”

							- rec.firstName = rec.name.split(' ')[0];

							.when #{rec.when}, #{rec.firstName} managed Michael at #{rec.company}

					each rec in recommendations
						+recommendation(rec)


	+page("portfolio")
		.content
			.opening.animBlock
				h4 Portfolio
				.portfolio
					.content
						if data.categories.length
							ul
								each cat in data.categories
									li: a(href='/portfolio/' + cat.key, class=data.category && data.category.id == cat.id ? 'active' : false).list-group-item= cat.name

						mixin post(post)
							.post(data-ks-editable=editable(user, { list: 'Post', id: post.id }))
								h3: a(href='/portfolio/' + post.slug)= post.title
								p!= post.content.brief.html
								if post.content.extended
									p.read-more: a(href='/portfolio/' + post.slug) Read more...

						if filters.category && !data.category
							h3.text-muted Invalid Category.
						else
							if data.posts.results.length
								each post in data.posts.results
									+post(post)
							else
								if data.category
									h3.text-muted There are no posts in the category #{data.category.name}.
								else
									h3.text-muted There are no posts yet.



	+page("contact")
		.content
			.contactOpening.animBlock
				h4 Contact
				
				span.por Call me #[a(href="#") 0401015708]
				span.por Email me #[a(href="#") michaelzaporozhets@gmail.com]
				span.por Mail me  #[a(href="#") Unit 2, 25 Queens Rd, Melbourne 3004]
				p.or Or, fill out the following form and I will get back to you post haste.

				+flash-messages(messages)
			.contactForm.animBlock
				if enquirySubmitted
					h5 Thanks for getting in touch.
				else
					form(method='post')
						input(type='hidden', name='action', value='contact')
						.dual
							.form-group(class=validationErrors.name ? 'has-error' : null)
								input(type='text', name='name.full', placeholder='Name', value=formData['name.full']).form-control
							.form-group(class=validationErrors.email ? 'has-error' : null)
								input(type='email', name='email', placeholder="Email", value=formData.email).form-control
						.form-group(class=validationErrors.enquiryType ? 'has-error' : null)
							each type in enquiryTypes
								.radio
									input(type="radio", selected=formData.enquiryType == type.value)
									label= type.label
						.form-group(class=validationErrors.message ? 'has-error' : null)
							textarea(name='message', placeholder='Leave us a message...' rows=4).form-control= formData.message
						.form-actions
							button(type='submit').btn.btn-primary Send

	+page("pagenotfound")
		.content
			.opening.animBlock
				h4 404
				p Looks like you're lost! #[a(href="/home") Go Back Home?]